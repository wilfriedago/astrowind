---
import { Icon } from 'astro-icon';

const {
	label = 'Toggle the menu',
	class:
		className = 'ml-1.5 text-gray-500 dark:text-gray-400 hover:bg-gray-100 dark:hover:bg-gray-800 focus:outline-none focus:ring-4 focus:ring-gray-200 dark:focus:ring-gray-700 rounded-full text-sm p-2.5 inline-flex items-center transition',
	iconClass = 'w-6 h-6',
	iconName = 'tabler:menu',
} = Astro.props;
---

<button type="button" class={className} title={label} aria-label={label} data-aw-toggle-menu>
	<Icon name={iconName} class={iconClass} optimize={false} />
</button>
